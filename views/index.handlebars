<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Greetings widgit</title>
  <link rel="stylesheet" href="css/styles.css">

</head>

<div class="container">

  <section class="greetingSection">
    <div>

      {{#if errorMessage}}
      <h4 class="error">{{errorMessage}}</h4>
      {{/if}}
      <h1 class="greet">Greet Me :)</h1>

    </div>

    <div class="row">

      <form action="/greetings" method="POST">

        <h3><label for="Names" class="nameHeading">NAME</label></h3>

      <div class="buttonIn">
        <input type="text" value="" name="greetedName" placeholder="                                                                              Please enter your name" class="Name">
        <button class="enter" type="submit" name="button">Enter</button>
    </div>
     

    </div>
     <h3 class="langHeading">LANGUAGE</h3>
    <div class="radio-container">
       
    <label class="valueLanguages">
      <input type="radio" name="language" class="itemTypeRadio" value="english">
      <span class="label-body">English</span>
    </label>

    <label class="valueLanguages">
      <input type="radio" name="language" class="itemTypeRadio" value="afrikaans">
      <span class="label-body">Afrikaans</span>
    </label>

    <label class="valueLanguages">
      <input type="radio" name="language" class="itemTypeRadio" value="arabic">
      <span class="label-body">Arabic</span>
    </label>

    </div>
  <div class="theMessage">{{greetingTheUser}}</div>
    <hr>

  

      <span class="valueDisplay">{{counter}}</span>
      <br>

    <br>

      <a class="btnGrt" href="/greeted">Greeted Users</a>
    </form>
    
        <form  action="/reset" method="post"> <button class="restBtn" name="reset" type="submit" {{reset}}>Reset</button></form>
    
  </section>

  <footer>&#169 Raadiyah Arend Copyright 2023</footer>

</div>
<script>


  document.addEventListener("DOMContentLoaded", () => {
    const error = document.querySelector(".error");
    const theMessage = document.querySelector(".theMessage");

  if (error.textContent !== "") {
  console.log("Error content not empty");
  setTimeout(() => {
    error.textContent = "";
    console.log("Error content cleared");
  }, 3000);
}

if (theMessage.textContent !== "") {
  console.log("Message content not empty");
  setTimeout(() => {
    theMessage.textContent = "";
    console.log("Message content cleared");
  }, 1000);
}

  });
</script>

</body>

</html>